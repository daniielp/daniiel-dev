---
import { Image } from "astro:assets";
const { title, description } = Astro.props;
---

<div
  class={"bg-slate-900 pt-10 sm:pt-16 pb-10 sm:pb-16 lg:overflow-hidden lg:pt-8 lg:pb-14"}
>
  <div class="mx-auto max-w-7xl lg:px-8">
    <div class="lg:grid lg:grid-cols-2 lg:gap-8">
      <div
        class="mx-auto max-w-md px-6 sm:max-w-2xl sm:text-center lg:flex lg:items-center lg:px-0 lg:text-left"
      >
        <div class="lg:py-24">
          <h1
            class="text-4xl font-bold tracking-tight text-white sm:text-6xl lg:mt-6 xl:text-6xl"
          >
            {title}
          </h1>
          <p
            class="mt-3 text-base text-gray-300 sm:mt-5 sm:text-xl lg:text-lg xl:text-xl"
          >
            {description}
          </p>
        </div>
      </div>
      <div class="-mb-16 sm:-mb-48 lg:relative lg:m-0">
        <Image
          width={600}
          height={600}
          src="/images/denmark-animation.svg"
          alt="Ping animation for aarhus, Denmark"
        />
      </div>
    </div>
  </div>
</div>
