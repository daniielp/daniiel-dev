---
import Layout from "@/layouts/Layout.astro"
import { PriceCalculation } from "@/components/react-blocks/price-calculation"
---

<Layout title="Daniiel Pricing">
  <main>
    <section>
      <div class="flow-root bg-slate-900 py-16">
        <div class="mx-auto flex max-w-7xl flex-col gap-16 px-6">
          <div class="">
            <h2 class="text-4xl font-bold tracking-tight text-white">
              Transform your vision into reality with expert consulting
            </h2>
            <p class="mt-2 text-base text-gray-300 sm:text-xl lg:text-lg xl:text-xl">
              Start with our proven core package and amplify results with powerful add-ons
            </p>
          </div>
          <PriceCalculation client:load />
        </div>
      </div>
    </section>
  </main>
</Layout>
