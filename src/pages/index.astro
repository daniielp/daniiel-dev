---
import FullCoverage from "@/blocks/full-coverage.astro"
import CodeEditor from "../blocks/code-section.astro"
import Layout from "../layouts/Layout.astro"
import Promo from "@/blocks/promo.astro"
import Projects from "@/blocks/projects.astro"
import TestimonialSection from "@/blocks/testimonial-section.astro"
---

<Layout title="Your Creative Frontend Developer - Daniiel">
  <main>
    <CodeEditor
      title="Frontend Developer focused on interactiveness"
      description="With a passion for clean code and intuitive design, I transform static websites into dynamic, engaging applications through web technologies."
    />
    <Projects />
    <Promo
      title="Looking for your next team member?"
      cta={{ link: "/contact", text: "Get in touch" }}
      image={{
        alt: "Daniel Pedersen also know as Daniiel where he is smiling and looking into the camera",
        src: "/images/profile-image.png"
      }}
      description="With a multimedia design degree, 3 years of web development experience, and a passion for web applications, I can contribute with strong full-stack development, troubleshooting, and interactive solution skills as a self-driven, patient, and team-oriented player."
    />
    <TestimonialSection />
    <FullCoverage />
  </main>
</Layout>
