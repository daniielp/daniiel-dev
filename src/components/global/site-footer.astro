---
import { getCollection } from "astro:content"

const legalDocuments = await getCollection("policy")
---

<footer aria-labelledby="footer-heading">
  <h2 id="footer-heading" class="sr-only">Footer</h2>
  <div class="mx-auto max-w-7xl pb-8 pt-16 sm:pt-24 lg:pt-32">
    <div
      class="mt-8 border-t border-gray-900/10 pt-8 md:flex md:items-center md:justify-between"
    >
      <div class="flex space-x-6 md:order-2">
        {
          legalDocuments.map((item) => (
            <a
              href={`/policies/${item.slug}`}
              class="text-gray-500 hover:text-gray-600"
            >
              <span class="">{item.data.title}</span>
            </a>
          ))
        }
      </div>
      <p class="mt-8 text-base leading-5 text-gray-500 md:order-1 md:mt-0">
        &copy; {new Date().getFullYear()} Daniel Pedersen. All rights reserved.
      </p>
    </div>
  </div>
</footer>
