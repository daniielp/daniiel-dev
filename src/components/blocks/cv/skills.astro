---
import { Code2, Palette, Zap } from "lucide-react"
---

<section class="mb-16">
  <h2 class="mb-8 text-2xl font-semibold text-gray-900">Skills</h2>

  <div class="grid grid-cols-1 gap-8 md:grid-cols-3 print:grid-cols-3">
    <div>
      <div class="mb-4 flex items-center gap-2">
        <Code2 className="h-5 w-5 text-gray-700" />
        <h3 class="font-medium text-gray-900">Frontend</h3>
      </div>
      <div class="space-y-2 text-sm text-gray-700">
        <div>React & Next.js</div>
        <div>TypeScript</div>
        <div>TailwindCSS</div>
        <div>Modern JavaScript</div>
        <div>Performance Optimization</div>
      </div>
    </div>

    <div>
      <div class="mb-4 flex items-center gap-2">
        <Palette className="h-5 w-5 text-gray-700" />
        <h3 class="font-medium text-gray-900">Product</h3>
      </div>
      <div class="space-y-2 text-sm text-gray-700">
        <div>UX Design</div>
        <div>User Research</div>
        <div>A/B Testing</div>
        <div>Conversion Optimization</div>
        <div>Product Analytics</div>
      </div>
    </div>
    <div>
      <div class="mb-4 flex items-center gap-2">
        <Zap className="h-5 w-5 text-gray-700" />
        <h3 class="font-medium text-gray-900">Tools</h3>
      </div>
      <div class="space-y-2 text-sm text-gray-700">
        <div>Git & GitHub</div>
        <div>AWS & Cloud Services</div>
        <div>Stripe Integration</div>
        <div>REST APIs</div>
        <div>Database Design</div>
      </div>
    </div>
  </div>
</section>
